<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp">

        <ImageButton
            android:id="@+id/r1_btn_good"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/survey_atype_heart" />

        <ImageButton
            android:id="@+id/r1_btn_declar"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@+id/r1_btn_good"
            android:background="@drawable/comment" />

        <ImageButton
            android:id="@+id/r1_btn_close"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/cancel" />
    </RelativeLayout>

    <TextView
        android:id="@+id/r1_text_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="45dp"
        android:text="Q. 가장 좋아하는 음식은?"
        android:textColor="#434343"
        android:textSize="20sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/r1_image_result1"
                android:layout_width="210dp"
                android:layout_height="36dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:background="@drawable/survey_atype_box2" />

            <TextView
                android:id="@+id/r1_text_name1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/r1_image_result1"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:text="1. 한식"
                android:textColor="#848484"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/r1_text_percent1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@+id/r1_image_result1"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:text="56%"
                android:textColor="#848484"
                android:textSize="14sp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <ImageView
                android:id="@+id/r1_image_result2"
                android:layout_width="210dp"
                android:layout_height="36dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/survey_atype_box2" />

            <TextView
                android:id="@+id/r1_text_name2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/r1_image_result2"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:text="2. 일식"
                android:textColor="#848484"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/r1_text_percent2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@+id/r1_image_result2"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:text="34%"
                android:textColor="#848484"
                android:textSize="14sp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:visibility="visible">

            <ImageView
                android:id="@+id/r1_image_result3"
                android:layout_width="210dp"
                android:layout_height="36dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/survey_atype_box2" />

            <TextView
                android:id="@+id/r1_text_name3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/r1_image_result3"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:text="3. 중식"
                android:textColor="#848484"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/r1_text_percent3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@+id/r1_image_result3"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:text="24%"
                android:textColor="#848484"
                android:textSize="14sp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:visibility="visible">

            <ImageView
                android:id="@+id/r1_image_result4"
                android:layout_width="210dp"
                android:layout_height="36dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:background="@drawable/survey_atype_box2" />

            <TextView
                android:id="@+id/r1_text_name4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/r1_image_result4"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:text="4. 기타"
                android:textColor="#848484"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/r1_text_percent4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@+id/r1_image_result4"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:text="14%"
                android:textColor="#848484"
                android:textSize="14sp" />

        </RelativeLayout>

        <Button
            android:id="@+id/r1_detail_btn"
            android:layout_width="186dp"
            android:layout_height="35dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="44dp"
            android:background="@drawable/survey_result_ctype_2_box"
            android:text="자세한 결과보기"
            android:textColor="#848484"
            android:textSize="16sp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:visibility="invisible" />
    </LinearLayout>
</LinearLayout>