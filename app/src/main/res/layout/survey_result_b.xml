<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp">

        <ImageButton
            android:id="@+id/r2_btn_good"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/survey_atype_heart" />

        <ImageButton
            android:id="@+id/r2_btn_comment"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@+id/r2_btn_good"
            android:background="@drawable/comment" />

        <ImageButton
            android:id="@+id/r2_btn_close"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/cancel" />
    </RelativeLayout>

    <TextView
        android:id="@+id/r2_text_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Q.종혁이는 열정맨이다?"
        android:textColor="#434343"
        android:textSize="20sp"
        android:textStyle="bold" />


    <RelativeLayout
        android:id="@+id/rl_answer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="17dp"
        android:layout_marginRight="17dp"
        android:orientation="horizontal">


        <RelativeLayout
            android:id="@+id/ll_option1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="17dp"
            android:layout_marginTop="70dp"
            android:layout_toLeftOf="@+id/view_center"
            android:gravity="center"
            android:orientation="vertical">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/r2_btn_option1_check"
                android:layout_width="105dp"
                android:layout_height="105dp"
                android:layout_marginBottom="24dp"
                android:src="@drawable/btype_circle2"
                android:visibility="invisible" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/r2_image_option1"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginBottom="24dp"
                android:layout_marginLeft="2.5dp"
                android:layout_marginTop="2.5dp"
                android:src="@drawable/survey_ctype_circle1" />

            <TextView
                android:id="@+id/r2_text_ok"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/r2_btn_option1_check"
                android:layout_centerHorizontal="true"
                android:text="화이트"
                android:textColor="#848484"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/r2_text_result1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/r2_text_ok"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10sp"
                android:text="67%"
                android:textColor="#848484"
                android:textSize="20sp" />
        </RelativeLayout>

        <View
            android:id="@+id/view_center"
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:layout_centerInParent="true" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="17dp"
            android:layout_marginTop="70dp"
            android:layout_toRightOf="@+id/view_center"
            android:gravity="center"
            android:orientation="vertical">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/r2_btn_option2_check"
                android:layout_width="105dp"
                android:layout_height="105dp"
                android:layout_marginBottom="24dp"
                android:src="@drawable/btype_circle2"
                android:visibility="invisible" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/r2_image_option2"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginBottom="24dp"
                android:layout_marginLeft="2.5dp"
                android:layout_marginTop="2.5dp"
                android:background="@drawable/survey_ctype_circle2" />

            <TextView
                android:id="@+id/r2_text_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/r2_btn_option2_check"
                android:layout_centerHorizontal="true"
                android:text="블랙"
                android:textColor="#848484"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/r2_text_result2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/r2_text_no"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10sp"
                android:text="67%"
                android:textColor="#848484"
                android:textSize="20sp" />
        </RelativeLayout>
    </RelativeLayout>

    <Button
        android:id="@+id/r2_detail_btn"
        android:layout_width="186dp"
        android:layout_height="35dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="44dp"
        android:background="@drawable/survey_result_ctype_2_box"
        android:text="자세한 결과보기"
        android:textColor="#848484"
        android:textSize="16sp" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:visibility="invisible" />
</LinearLayout>