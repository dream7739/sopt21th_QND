<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageButton
        android:id="@+id/notice_close"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="21dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/cancel"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="15dp" />

    <TextView
        android:id="@+id/notice_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="163dp"
        android:text="참여가 완료되었습니다 :)"
        android:textColor="#434343"
        android:textSize="20sp" />


    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/notice_text"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal">


        <ImageView
            android:id="@+id/coin_image"
            android:layout_width="29dp"
            android:layout_height="29dp"
            android:background="@drawable/coin" />


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/coin_image">

            <TextView
                android:id="@+id/coin_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3"
                android:textColor="#848484"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/coin_num"
                android:text="적립되었습니다!"
                android:textColor="#8BBDFF"
                android:textSize="16sp" />
        </RelativeLayout>

    </RelativeLayout>

    <Button
        android:id="@+id/notice_finish"
        android:layout_width="186dp"
        android:layout_height="35dp"
        android:layout_marginTop="46dp"
        android:background="@drawable/survey_complete_box"
        android:text="결과보기"
        android:textColor="#848484"
        android:textSize="16sp"
        android:layout_below="@+id/relativeLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="148dp"/>
</RelativeLayout>